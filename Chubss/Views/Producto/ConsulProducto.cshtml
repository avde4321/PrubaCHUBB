@{
}

@model List<Chubss.Models.Producto>

<table id="tblProducto" class="table table-bordered table-striped" style="font-size:14px">
    <thead>
        <tr>
            <th>ID Producto</th>
            <th>CodProducto</th>
            <th>Descripcion</th>
            <th>Fecha Ingreso</th>
            <th>Estado</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdProducto</td>
                <td>@item.CodProducto</td>
                <td>@item.Descripcion</td>
                <td>@item.Fecha</td>
                <td>@item.Estado</td>
                <td>
                    <div onclick="ModalEditaProducto('@item.IdProducto','@item.CodProducto','@item.Descripcion','@item.Estado')">
                        <input id="btnAddProducto" type="image" src="https://cdn-icons-png.flaticon.com/512/1160/1160515.png" height="30" width="30" />
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
    $('#tblProducto').DataTable({
        "paging": true,
        "searching": true,
        "ordering": true,
        "autoWidth": false,
        "pageLength": 10,
        "responsive": true,
        "language": {
            url: "../Content/idioma/espaniol.json"
        },
    });
</script>
